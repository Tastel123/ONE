/* pages/oneStory/oneStory.wxss */
.header {
    z-index: 99;
    width: 100%;
    height: 2rem;
    line-height: 2rem;
    background: #fff;
    position: fixed;
    top: 0;
}
.text-center {
    text-align: center;
}
.header-title {
    font-size: 1rem;
    color: #333;
}
.inline {
    display: inline-block !important;
}


.container {
    padding: .625rem .9375rem;
    margin-top: 2.5rem;  
}
.m-b-xxl {
    margin-bottom: 3.5rem;
}
.padder {
    padding-right: .9375rem;
    padding-left: .9375rem;
}
.article-title {
    color: #000;
    font-size: 1.25rem;
    /* margin-top: 5.875rem; */
    font-weight: 500;
    line-height: 1.3;
}

.article-author {
    color: #000;
    font-size: .7125rem;
    margin-top: .875rem;
}
.artical-content {
    /* text-indent:35px; */
    line-height: 1.625rem;
    margin-top: .875rem;
    word-break: break-all;
    font-size: .875rem;
}

.article-footer {
    position: fixed;
    width: 100%;
    height: 3rem;
    bottom: 0;
    background: hsla(0,0%,100%,.9);
    -webkit-box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.5);
    box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.5);
}
.last, .next {
    width: 50%;
    text-align: center;
    float: left;
    line-height: 3rem;
}
.last {
    text-decoration: none;
    color: #58666e;
}