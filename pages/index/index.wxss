/* pages/index/index.wxss */
.header {
    z-index: 99;
    width: 100%;
    height: 2rem;
    line-height: 2rem;
    background: #fff;
    position: fixed;
    top: 0;
    font-size: 1rem;
    color: #333;
    display: inline-block !important;
    text-align: center;
}

/* 主页 */
.container {
    padding: .625rem .9375rem;
    margin-top: 2rem;
    background-color: #f0f3f4;
}
.no-padder {
    padding: 0 
}

.home-img {
    position: relative;
    display: inline-block;
    vertical-align: top;
    max-width: 100%;
    width: 100%;
    overflow: hidden;
}
.home-img:before {
    content: " ";
    display: block;
    background-color: #f7f7f7;
    padding-bottom: calc(100vh - 3.125rem);   
}

.home-mask {
    margin-top: 2rem;
    background: rgba(0,0,0,.5);
}
