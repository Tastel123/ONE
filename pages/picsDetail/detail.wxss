/* pages/detail/detail.wxss */
.container {
  margin-top: 0; 
  padding: 0;

}

.picsImg {
  margin-bottom: 3.5rem;
}
.one-img {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.one-img:before {
  content: " ";
  display: block;
  background-color: #f7f7f7;
  padding-bottom: 66.6666%;
}
.one-img image {
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
}

.content{
  padding: .75rem;
  margin: 0;
}
.upper {
  display: block;
  font-size: .725rem;
}
.pull-left {
  float: left;
}
.pull-right {
  float: right;
}
.middle {
  text-align: center;
  margin-top: .75rem;
}
.one-day {
  font-size: 2.5rem;
  line-height: 2.5rem;
  margin-top: 2rem;
  text-align: center;
}
.one-date {
  font-size: .875rem;
  line-height: .875rem;
  margin-top: .75rem; 
}
.line {
  width: 30%;
  margin: .9375rem auto;
  border-bottom: .0625rem solid #eee;
}
.text-desc {
  margin-top: .75rem;
  font-size: .875rem;
}
.text-title {
  color: #98a6ad;
  margin-top: 2.5rem;
  text-align: center;
  font-size: .725rem;
}

.article-footer {
    position: fixed;
    width: 100%;
    height: 3rem;
    bottom: 0;
    background: hsla(0,0%,100%,.9);
    -webkit-box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.5);
    box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.5);
}
.last, .next {
    width: 50%;
    text-align: center;
    float: left;
    line-height: 3rem;
}
.last {
    text-decoration: none;
    color: #58666e;
}